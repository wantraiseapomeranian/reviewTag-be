<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="attachment">
	
	<!-- 등록 -->
	<select id="sequence" resultType="int">
		select attachment_seq.nextval from dual
	</select>
	<insert id="insert">
		insert into attachment(
			attachment_no, attachment_name,
			attachment_type, attachment_size
			) values(
			#{attachmentNo}, #{attachmentName},
			#{attachmentType}, #{attachmentSize}
			)
	</insert>
	
	<!-- 상세 -->
	<select id="selectOne" resultType="AttachmentDto">
		select * from attachment 
		where attachment_no = #{attachmentNo}
	</select>
	
	<!-- 삭제  -->
	<delete id="delete">
		delete attachment where attachment_no = #{attachment_no}
	</delete>
	
</mapper>
	